	if (((e.keyCode == 87) || (e.keyCode == 119)) && (hero.y > 32)) {
		hero.y -= 32;
		render();
	}
	if (((e.keyCode == 83) || (e.keyCode == 115)) && (hero.y < (canvas.height - 64))) {
		hero.y += 32;
		render();
	}
	if (((e.keyCode == 65) || (e.keyCode == 97)) && (hero.x > 32)) {
		hero.x -= 32;
		render();
	}
